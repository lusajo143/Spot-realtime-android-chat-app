<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".bLogin.reg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spot"
                android:fontFamily="@font/acme2"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:gravity="left"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:fontFamily="@font/acme2"
                />

            <TextView
                android:gravity="left"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill your details below to be used to describe you."
                android:textSize="@dimen/text_size"
                android:fontFamily="@font/acme2"
                />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:id="@+id/reg_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:fontFamily="@font/acme2"
                        android:textSize="@dimen/text_size"
                        android:drawableLeft="@drawable/user"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="10dp"
                        />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="@dimen/text_size"
                        android:fontFamily="@font/acme2"
                        />

                    <RadioGroup
                        android:layout_marginTop="5dp"
                        android:id="@+id/reg_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <RadioButton
                            android:id="@+id/reg_male"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Male"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/text_size"
                            android:fontFamily="@font/acme2"
                            />
                        <RadioButton
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Female"
                            android:textSize="@dimen/text_size"
                            android:id="@+id/reg_female"
                            android:fontFamily="@font/acme2"
                            />
                    </RadioGroup>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="University"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/acme2"
                            android:textSize="@dimen/text_size"
                            />
                        <ProgressBar
                            android:visibility="gone"
                            android:id="@+id/prog_uni"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <Spinner
                                android:id="@+id/unis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Colleges"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/acme2"
                            android:textSize="@dimen/text_size"
                            />
                        <ProgressBar
                            android:visibility="gone"
                            android:id="@+id/prog_col"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <Spinner
                                android:id="@+id/col"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/reg_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Password"
                        android:textSize="@dimen/text_size"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/acme2"
                        android:inputType="textPassword"
                        />

                    <EditText
                        android:id="@+id/reg_conf_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Confirm Password"
                        android:textSize="@dimen/text_size"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/acme2"
                        android:inputType="textPassword"
                        />

                    <Button
                        android:onClick="Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Register"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:fontFamily="@font/acme2"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>